@page
@model WIndowApp.Pages.OrderLists.DeleteOrder
@{
    ViewData["Title"] = "DeleteOrder";
}

<div>
    <H2>Delete Order</H2>
    <div>Are you sure you want to delete this order?</div>
    <div>Customer ID = @Request.Query["id"]</div>
</div>

<form method="post" asp-page-handler="Delete">
    <input type="hidden" name="id" value="@Request.Query["id"]" />
    <div style="margin-top: 10px;">
        <button type="submit" class="btn btn-danger"> Delete</button>
        <a class="btn btn-primary" href="/OrderLists/Index">Cancel</a>
    </div>
</form>