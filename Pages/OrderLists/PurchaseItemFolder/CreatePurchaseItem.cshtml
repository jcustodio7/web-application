@page
@model WIndowApp.Pages.OrderLists.PurchaseItemFolder.CreatePurchaseItem
@{
    ViewData["Title"] = "CreatePurchaseItem";
}

<h1 class="text-center mb-3">Purchase Item</h1>
<form method="post" asp-page-handler="Submit">
    <div>
        <label class="col-form-label">Item Name</label>
        <div>
            <select class="form-control" asp-for="PurchaseItem.ItemName">
                @foreach(var item in @Model.StockKeepingUnitLists){
                    <option value="@item.Name">@item.Name</option>
                }
            </select>
            <span asp-validation-for="PurchaseItem.ItemName" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label class="col-form-label">Purchase Order ID</label>
        <div>
            <input class="form-control" asp-for="@Model.PurchaseOrderId" readonly/>
        </div>
    </div>
    <div>
        <label class="col-form-label">Quantity</label>
        <div>
            <input class="form-control" asp-for="PurchaseItem.Quantity" />
            <span asp-validation-for="PurchaseItem.Quantity" class="text-danger"></span>
        </div>
    </div>
    @* <div>
        <label class="col-form-label">Price per unit (Php)</label>
        <div>
            <input class="form-control" asp-for="PurchaseItem.PricePerUnit"/>
            <span asp-validation-for="PurchaseItem.PricePerUnit" class="text-danger"></span>
        </div>
    </div> *@
    <div style="display: flex; margin-top: 10px; gap: 10px;">
        <div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div>
            <a class="btn btn-outline-primary" href="/OrderLists/EditOrder?id=@Model.PurchaseOrderId" role="button">Cancel</a>
        </div>
    </div>
</form>
