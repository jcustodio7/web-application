@page
@model WIndowApp.Pages.OrderLists.PurchaseItemFolder.DeletePurchaseItem
@{
    ViewData["Title"] = "DeletePurchaseItem";
}

<div>
    <H2>Delete Item</H2>
    <div>Are you sure you want to delete this item?</div>
</div>

<form method="post" asp-page-handler="Delete">
    <input type="hidden" name="id" value="@Request.Query["id"]" />
    <input type="hidden" name="purchaseorderid" value="@Request.Query["purchaseorderid"]" />
    <div style="margin-top: 10px;">
        <button type="submit" class="btn btn-danger"> Delete</button>
        <a class="btn btn-primary" href="/OrderLists/EditOrder?id=@Model.Request.Query["id"]">Cancel</a>
    </div>
</form>