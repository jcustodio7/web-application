@page
@model WIndowApp.Pages.SKUs.CreateStockUnit
@{
    ViewData["Title"] = "CreateStockUnit";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">New Stock</h2>
        <div><span style="margin-top: 10px; color:red;">@Model.ErrorMessage</span></div>
        <form method="post">
            <div>
                <label class="col-form-label">Name</label>
                <div>
                    <input class="form-control" asp-for="StockKeepingUnit.Name"/>
                    <span asp-validation-for="StockKeepingUnit.Name" class="text-danger"></span>
                </div>
            </div>
            <div>
                <label class="col-form-label">Code</label>
                <div>
                    <input class="form-control" asp-for="StockKeepingUnit.Code"/>
                    <span asp-validation-for="StockKeepingUnit.Code" class="text-danger"></span>
                </div>
            </div>
            <div>
                <label class="col-form-label">Unit Price (Php)</label>
                <div>
                    <input class="form-control" asp-for="StockKeepingUnit.UnitPrice" />
                    <span asp-validation-for="StockKeepingUnit.UnitPrice" class="text-danger"></span>
                </div>
            </div>
            <div style="display: flex; margin-top: 10px; gap: 10px;">
                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div>
                    <a class="btn btn-outline-primary" href="/SKUs/Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>